 <div class="container">
<h2>Edit your Post</h2>

<p>Post username : @<%= post.name %></p>

<form method="post" action="/posts/<%= post.id %>?_method=PATCH">
    <div>
        <label>Name</label>
        <input type="text" name="name" value="<%= post.name %>" />
    </div>

    <div>
        <label>Shayari</label>
        <textarea name="shayari" rows="5" cols="35"><%= post.shayari %></textarea>
    </div>

    <div>
        <label>Image URL</label>
        <input type="text" name="image" value="<%= post.image %>" />
    </div>

    <div>
        <label>Profile Image URL</label>
        <input type="text" name="profile_image" value="<%= post.profile_image %>" />
    </div>

    <button type="submit">Submit</button>
</form>


</div>
